<script>
    // Configuração do Supabase
    const supabaseUrl = 'https://hzslgydylfheyzurkotd.supabase.co';
    const supabaseKey = 'eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiJzdXBhbmFzZSIsInJlZiI6Imh6c2xneWR5bGZoZXl6dXJrb3RkIiwicm9sZSI6ImFub24iLCJpYXQiOjE3NTU0NjY0NDgsImV4cCI6MjA3MTA0MjQ0OH0.G9DIdCvM-M4MqSadw4qpc82z6G479tc9moCvpLU7jDQ';
    const supabase = window.supabase.createClient(supabaseUrl, supabaseKey);
    
    // Elementos do DOM
    const nomeInput = document.getElementById('chat-nome');
    const mensagensContainer = document.getElementById('chat-mensagens');
    const chatInput = document.getElementById('chat-input');
    const enviarBtn = document.getElementById('chat-enviar');
    
    // Variáveis de estado
    let usuario = localStorage.getItem('chatUsuario') || '';
    let carregando = true;
    
    // Inicializar chat
    function inicializarChat() {
        // Configurar nome de usuário se já existir
        if (usuario) {
            nomeInput.value = usuario;
        }
        
        // Carregar mensagens
        carregarMensagens();
        
        // Configurar listeners de eventos
        nomeInput.addEventListener('input', atualizarUsuario);
        chatInput.addEventListener('input', verificarInput);
        enviarBtn.addEventListener('click', enviarMensagem);
        chatInput.addEventListener('keypress', function(e) {
            if (e.key === 'Enter' && !e.shiftKey) {
                e.preventDefault();
                enviarMensagem();
            }
        });
        
        // Configurar subscription para novas mensagens em tempo real
        const canalMensagens = supabase
            .channel('mensagens-publicas')
            .on('postgres_changes', 
                { 
                    event: 'INSERT', 
                    schema: 'public', 
                    table: 'mensagens' 
                }, 
                (payload) => {
                    adicionarMensagemNaTela(payload.new);
                }
            )
            .subscribe();
    }
    
    // Atualizar nome de usuário
    function atualizarUsuario() {
        usuario = nomeInput.value.trim();
        localStorage.setItem('chatUsuario', usuario);
        verificarInput();
    }
    
    // Verificar se pode enviar mensagem
    function verificarInput() {
        const texto = chatInput.value.trim();
        const usuarioPreenchido = nomeInput.value.trim().length > 0;
        enviarBtn.disabled = !(texto.length > 0 && usuarioPreenchido);
    }
    
    // Carregar mensagens do banco
    async function carregarMensagens() {
        try {
            const { data, error } = await supabase
                .from('mensagens')
                .select('*')
                .order('created_at', { ascending: true });
            
            if (error) {
                console.error('Erro ao carregar mensagens:', error);
                mensagensContainer.innerHTML = '<div class="erro">Erro ao carregar mensagens</div>';
                return;
            }
            
            mensagensContainer.innerHTML = '';
            carregando = false;
            
            if (data.length === 0) {
                mensagensContainer.innerHTML = '<div class="vazio">Nenhuma mensagem ainda. Seja o primeiro a enviar!</div>';
                return;
            }
            
            data.forEach(adicionarMensagemNaTela);
        } catch (erro) {
            console.error('Erro inesperado:', erro);
            mensagensContainer.innerHTML = '<div class="erro">Erro inesperado ao carregar mensagens</div>';
        }
    }
    
    // Adicionar mensagem na interface
    function adicionarMensagemNaTela(mensagem) {
        if (carregando) {
            mensagensContainer.innerHTML = '';
            carregando = false;
        }
        
        const elementoMensagem = document.createElement('div');
        elementoMensagem.className = 'mensagem';
        
        // Formatar data
        const data = new Date(mensagem.created_at);
        const dataFormatada = data.toLocaleTimeString('pt-BR', { 
            hour: '2-digit', 
            minute: '2-digit' 
        });
        
        elementoMensagem.innerHTML = `
            <div class="mensagem-cabecalho">
                <span class="mensagem-usuario">${mensagem.username}</span>
                <span class="mensagem-hora">${dataFormatada}</span>
            </div>
            <div class="mensagem-conteudo">${mensagem.content}</div>
        `;
        
        mensagensContainer.appendChild(elementoMensagem);
        
        // Rolagem automática para a última mensagem
        mensagensContainer.scrollTop = mensagensContainer.scrollHeight;
    }
    
    // Enviar mensagem
    async function enviarMensagem() {
        const texto = chatInput.value.trim();
        const usuarioAtual = nomeInput.value.trim();
        
        if (!texto || !usuarioAtual) return;
        
        try {
            // Desabilitar botão durante o envio
            enviarBtn.disabled = true;
            enviarBtn.textContent = 'Enviando...';
            
            const { data, error } = await supabase
                .from('mensagens')
                .insert([
                    { 
                        username: usuarioAtual, 
                        content: texto 
                    }
                ])
                .select();
            
            if (error) {
                console.error('Erro ao enviar mensagem:', error);
                alert('Erro ao enviar mensagem. Tente novamente.');
                return;
            }
            
            // Limpar campo de entrada
            chatInput.value = '';
            verificarInput();
            
        } catch (erro) {
            console.error('Erro inesperado:', erro);
            alert('Erro inesperado ao enviar mensagem.');
        } finally {
            enviarBtn.disabled = false;
            enviarBtn.textContent = 'Enviar';
        }
    }
    
    // Iniciar o chat quando a página carregar
    document.addEventListener('DOMContentLoaded', inicializarChat);
</script>
