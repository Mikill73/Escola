            min-height: 100vh;
        }

        .container {
            width: 90%;
            max-width: 600px;
            background-color: #333;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        h1 {
            text-align: center;
            margin-bottom: 20px;
            color: #fff;
        }

        textarea {
            width: 100%;
            height: 150px;
            padding: 12px;
            background-color: #444;
            color: #eee;
            border: none;
            border-radius: 4px;
            resize: vertical;
            box-sizing: border-box;
        }

        textarea::placeholder {
            color: #bbb;
        }

        button {
            width: 100%;
            padding: 12px;
            margin-top: 15px;
            background-color: #555;
            color: #fff;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-weight: bold;
            transition: background-color 0.2s;
        }

        button:hover {
            background-color: #666;
        }

        button:active {
            background-color: #777;
        }

        .modal {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.7);
            z-index: 1000;
            justify-content: center;
            align-items: center;
        }

        .modal-content {
            background-color: #333;
            padding: 25px;
            border-radius: 8px;
            width: 90%;
            max-width: 500px;
            max-height: 80vh;
            overflow-y: auto;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
        }

        .modal-title {
            margin-top: 0;
            color: #fff;
        }

        .modal-message {
            margin-bottom: 20px;
            line-height: 1.5;
        }

        .modal-buttons {
            display: flex;
            justify-content: flex-end;
            gap: 10px;
        }

        .modal-btn {
            padding: 10px 20px;
            border-radius: 4px;
            cursor: pointer;
            font-weight: bold;
        }

        .modal-confirm {
            background-color: #555;
            color: #fff;
        }

        .modal-confirm:hover {
            background-color: #666;
        }

        .modal-cancel {
            background-color: #444;
            color: #eee;
        }

        .modal-cancel:hover {
            background-color: #555;
        }
    </style>
