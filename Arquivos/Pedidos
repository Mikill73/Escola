<body class="pedido-sistema-body">
    <div class="pedido-container-principal">
        <h1 class="pedido-titulo-principal">Solicitar Tarefas</h1>
        <textarea class="pedido-textarea-custom" id="pedido-campo-texto" placeholder="O que você quer que seja adicionado, tarefa, estudo, etc..."></textarea>
        <button class="pedido-botao-envio" id="pedido-botao-enviar">Enviar Solicitação</button>
    </div>

    <div class="pedido-modal-overlay" id="pedido-modal-container">
        <div class="pedido-modal-conteudo">
            <h2 class="pedido-modal-titulo" id="pedido-modal-titulo">Título da Modal</h2>
            <p class="pedido-modal-mensagem" id="pedido-modal-mensagem">Mensagem de conteúdo da modal será exibida aqui.</p>
            <div class="pedido-modal-botoes">
                <button class="pedido-modal-botao pedido-modal-botao-cancelar" id="pedido-modal-botao-cancelar">Cancelar</button>
                <button class="pedido-modal-botao pedido-modal-botao-confirmar" id="pedido-modal-botao-confirmar">Confirmar</button>
            </div>
        </div>
    </div>

    <script>
        const pedidoWebhookURL = 'https://discord.com/api/webhooks/1411506218530242582/ZNJyj2zLKJ4sdosTpi_Syxt7ndTjUSljA-UGu1aB3A2msre7u_C8Ysz1fSXcmNmZSGe-';
        const pedidoCampoTexto = document.getElementById('pedido-campo-texto');
        const pedidoBotaoEnviar = document.getElementById('pedido-botao-enviar');
        const pedidoModalContainer = document.getElementById('pedido-modal-container');
        const pedidoModalTitulo = document.getElementById('pedido-modal-titulo');
        const pedidoModalMensagem = document.getElementById('pedido-modal-mensagem');
        const pedidoModalBotaoCancelar = document.getElementById('pedido-modal-botao-cancelar');
        const pedidoModalBotaoConfirmar = document.getElementById('pedido-modal-botao-confirmar');

        function pedidoExibirModal(titulo, mensagem, callbackConfirmacao) {
            pedidoModalTitulo.textContent = titulo;
            pedidoModalMensagem.textContent = mensagem;
            
            pedidoModalBotaoConfirmar.onclick = callbackConfirmacao;
            pedidoModalBotaoCancelar.onclick = pedidoOcultarModal;
            
            pedidoModalContainer.style.display = 'flex';
        }

        function pedidoOcultarModal() {
            pedidoModalContainer.style.display = 'none';
        }

        function pedidoEnviarSolicitacao() {
            const textoPedido = pedidoCampoTexto.value.trim();
            
            if (!textoPedido) {
                pedidoExibirModal('Campo Vazio', 'Por favor, insira sua solicitação antes de enviar.', pedidoOcultarModal);
                return;
            }
            
            if (textoPedido.length < 5) {
                pedidoExibirModal('Texto Muito Curto', 'Por favor, forneça mais detalhes sobre sua solicitação.', pedidoOcultarModal);
                return;
            }
            
            pedidoExibirModal('Confirmar Envio', 'Tem certeza de que deseja enviar esta solicitação?', function() {
                pedidoOcultarModal();
                
                const dadosWebhook = {
                    content: `Nova solicitação: ${textoPedido}`
                };
                
                fetch(pedidoWebhookURL, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(dadosWebhook)
                })
                .then(resposta => {
                    if (resposta.ok) {
                        pedidoExibirModal('Sucesso', 'Solicitação enviada com sucesso!', function() {
                            pedidoCampoTexto.value = '';
                            pedidoOcultarModal();
                        });
                    } else {
                        throw new Error('Falha no envio');
                    }
                })
                .catch(erro => {
                    pedidoExibirModal('Erro', 'Ocorreu um erro ao enviar sua solicitação. Por favor, tente novamente.', pedidoOcultarModal);
                });
            });
        }

        pedidoBotaoEnviar.addEventListener('click', pedidoEnviarSolicitacao);
        
        document.addEventListener('keydown', function(evento) {
            if (evento.key === 'Escape') {
                pedidoOcultarModal();
            }
        });

        pedidoCampoTexto.addEventListener('keydown', function(evento) {
            if (evento.ctrlKey && evento.key === 'Enter') {
                pedidoEnviarSolicitacao();
            }
        });
    </script>
</body>
